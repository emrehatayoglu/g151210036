@model FilmSitesi.Models.tbl_Film
@{
    ViewBag.Title = "Film Guncelle";
}

<h2>Film Guncelle</h2>
<div class="row">
    <h2 style="color:green;">@ViewBag.Mesaj</h2>
    <h2 style="color:red;">@ViewBag.Hata</h2>
  @using (Html.BeginForm("Guncelle", "Film", FormMethod.Post, new { enctype = "multipart/form-data" }))
  {

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <form>
            <hr>
            <label>Film Adı: </label><br>
            @Html.TextBoxFor(m => m.FilmAdi, new { @class = "form-control1 control3" })

            <label>Yönetmen Adı:  </label><br>
            @Html.TextBoxFor(m => m.YonetmenAdi, new { @class = "form-control1 control3" })
            <div class="form-group">
                <label class="col-sm-3 control-label">Kategori</label>
                <div class="col-sm-9">
                    @*@Html.DropDownListFor(model => model.tbl_KategoriID, new SelectList(ViewBag.Kategori, "SayfaId", "SayfaAd"))*@
                    @Html.DropDownListFor(model => model.tbl_KategoriID, new SelectList(ViewBag.Kategori, "tbl_KategoriID", "KategoriAdi"))
                    <span class="help-block"></span>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">Fotoğraf</label>
                    <div class="col-sm-9">
                        <input type="file" name="resim" class="filestyle">
                        <span class="help-block"></span>
                    </div>

                    <label>Film içeriği:  </label><br>
                    @Html.TextAreaFor(m => m.FilmBilgi, new { @class = "form-control1 control3" })
                    <hr>
                    <input type="submit" value="EKLE">
        </form>
    }
</div>