<font size="3" color="white"><FilmSitesi.Models.tbl_Film></font>

<section id="portfolio" data-target="portfolio">
    <div class="section-area portfolio offwhite">
        <div class="container">
            <div class="title-section text-center">
                <h1>@FilmSitesi.Resources.lang.Kategoriler</h1>
                <ul class="list-inline filter-list">
                    <li class="active"><a href="#" title="" data-filter="*">Hepsi</a></li>
                    @foreach (var item in ViewBag.Kategori)
                    {
                        <li><a href="#" title="" data-filter=".@item.KategoriAdi">@item.KategoriAdi</a></li>
                    }
                </ul>
            </div>
            <ul class="items_container">
                @foreach (var item in Model)
                {
                    <li class="@item.kategori.KategoriAdi">
                        <img src="@item.resimUrl" alt="">
                        <div class="overlay-data top">
                            <div class="overlay-inner">
                                <div>
                                    <h4>@item.FilmAdi</h4>
                                    <p>@item.YonetmenAdi</p>
                                </div>
                            </div>
                            <a href="@item.resimUrl" title="" class="zoom fancybox" rel="group1a"><span class="fa fa-search"></span></a>
                        </div>
                    </li>
                }

            </ul>
        </div>
    </div>
</section>
